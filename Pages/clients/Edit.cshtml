@page
@model CRUD.Pages.clients.EditModel
@{
}
<br />
<h1>Edit Clients</h1>
@if (Model.errorMessage.Length > 0)
{
    <div class="alert alert-warning alert-dismissible fade show">
        <strong>@Model.errorMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss='alert' aria-label="close"></button>
    </div>
}

<form method="post">
    <input type="hidden" name="id" value="@Model.clientinfo.id" />
    <div class="row mb-3">
        <label class="col-sm-3" col-form-lable>Name</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="name" value="" />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3" col-form-lable>Email</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="email" value="" />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3" col-form-lable>Phone_no</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="phone" value="" />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3" col-form-lable>address</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="address" value="" />
        </div>
    </div>

    @if (Model.GetMessage.Length > 0)
    {
        <div class="alert alert-warning alert-dismissible fade show">
            <strong>@Model.GetMessage</strong>
            <button type="button" class="btn-close" data-bs-dismiss='alert' aria-label="close"></button>
        </div>
    }

    <div class="row-mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Submit</button>
            <button type="submit" class="btn btn-primary">Clear</button>

        </div>
    </div>
</form>
